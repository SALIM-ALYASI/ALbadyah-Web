# ==============================================
# إعدادات الاستضافة العادية - البادية
# Shared Hosting Environment Settings
# ==============================================

# معلومات التطبيق الأساسية
APP_NAME="البادية - Al-Badyah"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# إعدادات اللغة
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA

# إعدادات الصيانة
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# إعدادات الخادم
PHP_CLI_SERVER_WORKERS=4

# إعدادات التشفير
BCRYPT_ROUNDS=12

# إعدادات السجلات
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# إعدادات قاعدة البيانات
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# إعدادات الجلسات
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true

# إعدادات البث
BROADCAST_CONNECTION=log

# إعدادات نظام الملفات
FILESYSTEM_DISK=public

# إعدادات الطوابير
QUEUE_CONNECTION=database

# إعدادات التخزين المؤقت
CACHE_STORE=database
# CACHE_PREFIX=

# إعدادات Memcached
MEMCACHED_HOST=127.0.0.1

# إعدادات Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# إعدادات البريد الإلكتروني
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mail.your-domain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# إعدادات AWS (اختيارية)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# إعدادات Vite
VITE_APP_NAME="${APP_NAME}"

# سر لوحة التحكم
ADMIN_SECRET=your-secure-admin-secret-here

# إعدادات إضافية للإنتاج
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com

# ==============================================
# ملاحظات مهمة للاستضافة العادية:
# ==============================================

# 1. تأكد من تغيير APP_URL إلى نطاقك الفعلي
# 2. تأكد من إنشاء مفتاح التطبيق: php artisan key:generate
# 3. تأكد من إعداد قاعدة البيانات في cPanel
# 4. تأكد من إعداد SMTP للبريد الإلكتروني
# 5. تأكد من تحديث ADMIN_SECRET
# 6. تأكد من إنشاء storage link: php artisan storage:link
# 7. تأكد من تشغيل: php artisan migrate --force
# 8. تأكد من تشغيل: php artisan config:cache
# 9. تأكد من تشغيل: php artisan route:cache
# 10. تأكد من تشغيل: php artisan view:cache

# ==============================================
# خطوات النشر على الاستضافة العادية:
# ==============================================

# 1. ارفع جميع ملفات المشروع إلى public_html
# 2. انسخ هذا الملف إلى .env
# 3. حدث المتغيرات المطلوبة
# 4. شغل: composer install --optimize-autoloader --no-dev
# 5. شغل: php artisan key:generate
# 6. شغل: php artisan migrate --force
# 7. شغل: php artisan storage:link
# 8. شغل: php artisan config:cache
# 9. شغل: php artisan route:cache
# 10. شغل: php artisan view:cache
